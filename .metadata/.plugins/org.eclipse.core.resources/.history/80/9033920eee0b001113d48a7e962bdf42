window.onload = init;

var balls = 0;
var strikes = 0;
var fouls = 0;
var outs = 0;

var strikeButton = document.getElementById("strikeButton");
var foulButton = document.getElementById("foulButton");
var ballButton = document.getElementById("ballButton");
var runnerSafeButton = document.getElementById("runnerSafeButton");
var runnerOutButton = document.getElementById("runnerOutButton");

function init(){    
	strikeButton = document.getElementById("strikeButton");
	strikeButton.onclick = strikeButtonClick;
	foulButton = document.getElementById("foulButton");
	foulButton.onclick = foulButtonClick;
	ballButton = document.getElementById("ballButton");
	ballButton.onclick = ballButtonClick;
	runnerSafeButton = document.getElementById("runnerSafeButton");
	runnerSafeButton.onclick = runnerSafeButtonClick;
	runnerOutButton = document.getElementById("runnerOutButton");
	runnerOutButton.onclick = runnerOutButtonClick;
}

function strikeButtonClick() {
	balls++;
	setCountDisplay();
	checkIfOut();
}
function foulButtonClick() {
	fouls++;
	setCountDisplay();
	checkIfOut();
}
function ballButtonClick() {
	balls++;
	checkIfOut();
	setCountDisplay();
	
}
function runnerSafeButtonClick() {
	resetCount();
	setCountDisplay();
}
function runnerOutButtonClick() {
	outs++;
	resetCount();
}

function checkIfOut() {
	if(strikes == 2 || fouls == 2 ){
		kickerOut();
	}else if (balls == 4) {
		resetCount();
	}
}

function kickerOut(){
	outs++;
	resetCount();
	alert("OUT");
}

function inningOver(){
	alert("INNING OVER");
}

function setCountDisplay() {
	var ballDisplay = document.getElementById("ballsCount");
	ballDisplay.innerHTML = balls;
	var strikeDisplay = document.getElementById("strikesCount");
	strikeDisplay.innerHTML = strikes;
	var foulsDisplay = document.getElementById("foulsCount");
	foulsDisplay.innerHTML = fouls;
	var outsDisplay = document.getElementById("outsCount");
	outsDisplay.innerHTML = outs;
}

function resetCount() {
	balls = 0;
	strikes = 0;
	fouls = 0;
	setCountDisplay();
}

function newInningCount() {
	resetCount();
	outs = 0;
}






function hbclick() {

    var textinput = document.getElementById("inputText");
    var itemname = textinput.value;
    
    var listItem = document.createElement("li");
    listItem.innerHTML = itemname;
    
    var list = document.getElementById("list");
    list.appendChild(listItem);
    
    
}