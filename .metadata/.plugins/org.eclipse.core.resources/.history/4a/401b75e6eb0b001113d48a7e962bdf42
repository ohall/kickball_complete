window.onload = init;

var balls = 0;
var strikes = 0;
var fouls = 0;
var outs = 0;

var strikeButton = document.getElementById("strikeButton");
strikeButton.onclick = strikeButtonClick;
var foulButton = document.getElementById("foulButton");
foulButton.onclick = foulButtonClick;
var ballButton = document.getElementById("ballButton");
ballButton.onclick = ballButtonClick;
var runnerSafeButton = document.getElementById("runnerSafeButton");
runnerSafeButton.onclick = runnerSafeButtonClick;
var runnerOutButton = document.getElementById("runnerOutButton");
runnerOutButton.onclick = runnerOutButtonClick;

function init(){    
}

function strikeButtonClick() {
	balls++;
}
function foulButtonClick() {
	fouls++;
}
function ballButtonClick() {
	balls++;
}
function runnerSafeButtonClick() {
	
}
function runnerOutButtonClick() {
}

function setCountDisplay() {
	
}

function resetCount() {
	balls = 0;
	strikes = 0;
	fouls = 0;
}

function newInningCount() {
	resetCount();
	outs = 0;
}






function hbclick() {

    var textinput = document.getElementById("inputText");
    var itemname = textinput.value;
    
    var listItem = document.createElement("li");
    listItem.innerHTML = itemname;
    
    var list = document.getElementById("list");
    list.appendChild(listItem);
    
    
}